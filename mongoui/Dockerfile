FROM mongo-express:1.0.0-18-alpine3.18

RUN mkdir $HOME/uzrnem/database/mongo_db
RUN chmod -R 777 $HOME/uzrnem/

VOLUME $HOME/uzrnem/database/mongo_db

ENV ME_CONFIG_MONGODB_SERVER=mongodb
ENV ME_CONFIG_MONGODB_ENABLE_ADMIN=true
ENV ME_CONFIG_MONGODB_ADMINUSERNAME=root
ENV ME_CONFIG_MONGODB_ADMINPASSWORD=pass12345
ENV ME_CONFIG_BASICAUTH_USERNAME=root
ENV ME_CONFIG_BASICAUTH_PASSWORD=Kkraju00@123a

EXPOSE 8002:8081
